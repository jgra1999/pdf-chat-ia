---
export const prerender = false

import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import App from '../components/App.svelte'
---

<Layout title='Chat PDF'>
	<div
		class='absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]'
	>
	</div>
	<main class='grid place-content-center min-h-screen w-screen'>
		<h1 class='text-6xl opacity-70 font-bold text-center pb-10'>
			Chat With Your PDF
		</h1>
		<section class='container w-[1000px] max-w-xl h-64'>
			<App client:only='svelte' />
		</section>
	</main>
</Layout>
